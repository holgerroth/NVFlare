{
  "format_version": 2,
  "ROOT_DIR": "/workspace/Code/nvflare/nemo_nvflare/integration/nemo/examples/prompt_learning",
  "executors": [
    {
      "tasks": [
        "train",
        "validate"
      ],
      "executor": {
        "id": "Executor",
        "name": "PTMultiProcessExecutor",
        "args": {
          "executor_id": "learner_executor",
          "num_of_processes": 2,
          "components": [
            {
              "id": "learner_executor",
              "path": "nvflare.app_common.executors.learner_executor.LearnerExecutor",
              "args": {
                "learner_id": "learner"
              }
            },
            {
              "id": "learner",
              "path": "nemo_nvflare.PromptLearner",
              "args": {
                "config_path": "config/megatron_gpt_prompt_learning_config.yaml",
                "gpt_file_name": "{ROOT_DIR}/nemo-megatron-gpt-5B/nemo_gpt5B_fp16_tp2.nemo",
                "nemo_path": "nemo_gpt5B_fp16_tp2_sentiment.nemo",
                "train_ds_files": "{ROOT_DIR}/data/FinancialPhraseBank-v1.0_split/site-1.jsonl",
                "val_ds_files": "{ROOT_DIR}/data/FinancialPhraseBank-v1.0/financial_phrase_bank_val.jsonl",
                "new_tasks": "sentiment",
                "aggregation_epochs": 1,
                "devices": 2
              }
            }
          ]
        }
      }
    }
  ],
  "task_result_filters": [],
  "task_data_filters": [],
  "components": []
}
