{
  "format_version": 2,
  "ROOT_DIR": "/workspace/Code/nvflare/nemo_nvflare/integration/nemo/examples/prompt_learning",
  "min_clients": 3,
  "num_rounds": 50,
  "server": {
    "heart_beat_timeout": 600
  },
  "task_data_filters": [],
  "task_result_filters": [],
  "components": [
    {
      "id": "persistor",
      "name": "PTFileModelPersistor",
      "args": {
        "model": {
          "path": "nemo_nvflare.ServerPromptEncoder",
          "args": {
            "config_path": "config/megatron_gpt_prompt_learning_config.yaml",
            "taskname": "sentiment",
            "total_virtual_tokens": 10,
            "hidden_size": 4096,
            "gpt_file_name": "{ROOT_DIR}/nemo-megatron-gpt-5B/nemo_gpt5B_fp16_tp2.nemo",
            "devices": 2
          }
        }
      }
    },
    {
      "id": "shareable_generator",
      "name": "FullModelShareableGenerator",
      "args": {}
    },
    {
      "id": "aggregator",
      "name": "InTimeAccumulateWeightedAggregator",
      "args": {}
    },
    {
      "id": "model_selector",
      "name": "IntimeModelSelector",
      "args": {
        "weigh_by_local_iter": true
      }
    }
  ],
  "workflows": [
    {
      "id": "scatter_and_gather",
      "name": "ScatterAndGather",
      "args": {
        "min_clients": "{min_clients}",
        "num_rounds": "{num_rounds}",
        "start_round": 0,
        "wait_time_after_min_received": 10,
        "aggregator_id": "aggregator",
        "persistor_id": "persistor",
        "shareable_generator_id": "shareable_generator",
        "train_task_name": "train",
        "train_timeout": 0
      }
    }
  ]
}
